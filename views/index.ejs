<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-info navbar-info  py-3">
        <div class="container">
            <a href="#" class="navbar-brand">
                Fiber Ninjas <i class="bi bi-person-check"></i></a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
